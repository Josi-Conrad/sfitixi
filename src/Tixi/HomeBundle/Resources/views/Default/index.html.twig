{% extends '::base.html.twig' %}

{% block title %}{{ app.session.get('title') }}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/sfitixi.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/table_style.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/login_style.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}

    <!--APPLICATION BAR: with function points and anchors -->
    {% set currentbaseurl = app.session.get('baseurl') %}
    {% block frame %}
        <div class="frame">
            <div class="frame-table">
                <div class="frame-row">
                    <div class="frame-logo">
                        <a href="{{ currentbaseurl }}/home" id="fpm_home">
                            <img src="{{ asset('images/logo44px.png') }}" alt="Logo iTIXI" />
                        </a>
                    </div>
                    <div class="frame-left">
                        <div>
                            <a href="{{ currentbaseurl }}/public/about" id="fpm_public_about">
                                {{ tixi.application }}&nbsp;{{ tixi.version }}
                            </a>
                        </div>
                        <div>
                            <a href="{{ currentbaseurl }}/public/customer" id="fpm_public_customer">
                                Mandant:&nbsp;{{ app.session.get('customer') }}
                            </a>
                        </div>
                    </div>
                    <div class="frame-left">
                        <div id="fpr_breadcrumb">{{ app.session.get('breadcrumb') }}</div>
                    </div>
                    <div class="frame-right">
                        {%  if app.session.get('username') == tixi.undefined %}
                            <a href="{{ currentbaseurl }}/login" id="fpm_public_login">
                                <div>{{ app.session.get('username') }}:login</div>
                            </a>
                        {%  else %}
                            <a href="{{ currentbaseurl }}/public/logout" id="fpm_public_logout">
                                <div>{{ app.session.get('username') }}:logout</div>
                            </a>
                        {% endif %}
                        <div>
                            <a href="{{ currentbaseurl }}/app/preferences" id="fpm_home_preferences">Einstellungen</a>
                            |
                            <a href="{{ currentbaseurl }}/public/support" id="fpm_home_support">Support</a>
                            |
                            <a href="{{ currentbaseurl }}/public/help" id="fpm_home_help">Hilfe</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    <!-- MENU-BAR: with function points and anchors -->
    {% block menubar %}
        {{ include( 'TixiHomeBundle:Default:menu.html.twig' ) }}
    {% endblock %}

    <!--SUBJECT & TASK BAR: with function points and anchors -->
    {% set currentroute = app.session.get('route') %}
    {% set currentfilter = app.session.get('filter/' ~ currentroute) %}
    {% set currentpath = app.request.attributes.get('_route') %}

    <div class="subject-taskbars">
    {% block subject %}
        <div class="subject">
            <div class="subject-row">
                <div class="subject-left">
                    <div id="fpr_subject">{{ app.session.get('subject') }}</div>
                </div>
                <div class="subject-right">
                    <a href="{{ path( currentpath, {'action':'print'} ) }}" id="fpm_print">
                        <img src="{{ asset('images/printer-blue.png') }}" alt="printer" />
                    </a>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block taskbar %}
        <div class="taskbar">
            <div class="taskbar-row">
                <div class="taskbar-left">

                    {% if app.session.get('mode') == tixi.mode_select_list %}
                        <form class="taskbar-filter" name="tixi_filter">
                            <input id="fpw_filter"
                                   class="taskbar-left-filter-text"
                                   type="text"
                                   value="{{ currentfilter }}"
                                   placeholder="{{ tixi.filter }}"
                                   onblur="location.href='{{ path( currentpath, {'action':'filter', 'filter': '' } ) }}'
                                           +document.getElementById('fpw_filter').value; overlay();" />
                            <input id="fpm_filter"
                                   class="taskbar-left-filter-button"
                                   type="button"
                                   title="Filter auf Tabelle anwenden"
                                   value="Filtern"
                                   onclick="location.href='{{ path( currentpath, {'action':'filter', 'filter': '' } ) }}'
                                           +document.getElementById('fpw_filter').value; overlay();"/>

                        {% if (currentfilter == "") and (app.session.get('hasNext/' ~ currentroute)) %}
                            <input id="fpm_begin"
                                   class="taskbar-left-filter-button"
                                   type="button"
                                   title="Gehezu Anfang der Tabelle"
                                   value="<<"
                                   onclick="location.href='{{ path( currentpath, {'action':'begin'} ) }}';
                                            overlay();"/>
                            <input id="fpm_previous"
                                   class="taskbar-left-filter-button"
                                   type="button"
                                   value="<"
                                   title="Gehezu Seite vorher"
                                   onclick="location.href='{{ path( currentpath, {'action':'previous'} ) }}';
                                            overlay();"/>
                            <input id="fpm_selected"
                                   class="taskbar-left-filter-button"
                                   type="button"
                                   value="{{ app.session.get('cursor/' ~ currentroute) }}"
                                   title="Gehezu ausgewähltes Objekt"
                                   style="color:orange;"
                                   onclick="location.href='{{ path( currentpath, {'action':'selected'} ) }}';
                                            overlay();"/>
                            <input id="fpm_next"
                                   class="taskbar-left-filter-button"
                                   type="button"
                                   title="Gehezu Seite nachher"
                                   value=">"
                                   onclick="location.href='{{ path( currentpath, {'action':'next'} ) }}';
                                            overlay();"/>
                            <input id="fpm_end"
                                   class="taskbar-left-filter-button"
                                   type="button"
                                   title="Gehzu Ende der Tabelle"
                                   value=">>"
                                   onclick="location.href='{{ path( currentpath, {'action':'end'} ) }}';
                                            overlay();"/>
                        {% endif %}
                        </form>
                    {% endif %}
                </div>
                <div class="taskbar-right">
                    {% if app.session.get('mode') == tixi.mode_select_list %}
                        <input id="fpm_add"
                               type="button"
                               title="Datensatz zu Tabelle hinzufügen"
                               value="Hinzufügen"
                               onclick="location.href='{{ path( currentpath, {'action':'add'} ) }}'"/>
                        <input id="fpm_modify"
                               type="button"
                               title="Ausgewählte Datensatz bearbeiten"
                               value="Bearbeiten"
                               onclick="location.href='{{ path( currentpath, {'action':'modify'} ) }}'"/>
                        <input id="fpm_delete"
                               type="button"
                               title="Ausgewählte Datensatz in Tabelle löschen"
                               value="Löschen"
                              onclick="location.href='{{ path( currentpath, {'action':'delete'} ) }}'"/>

                    {% elseif app.session.get('mode') == tixi.mode_edit_in_list %}
                        <input id="fpm_save"
                               type="button"
                               value="Speichern"
                               onclick="document.forms['tixi_form'].submit()"/>
                        <input id="fpm_cancel"
                               type="button"
                               value="Abbrechen"
                               onclick="location.href='{{ path( currentpath, {'action':'cancel'} ) }}'"/>

                    {% elseif app.session.get('mode') == tixi.mode_read_record %}
                        <input id="fpm_modify"
                               type="button"
                               value="Bearbeiten"
                               onclick="location.href='{{ path( currentpath, {'action':'modify'} ) }}'"/>
                    {% elseif app.session.get('mode') == tixi.mode_edit_record %}
                        <input id="fpm_save"
                               type="submit"
                               value="Speichern"
                               onclick="document.forms['tixi_form'].submit()"/>
                        <input id="fpm_cancel"
                               type="button"
                               value="Abbrechen"
                               onclick="location.href='{{ path( currentpath, {'action':'cancel'} ) }}'"/>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endblock %}

    <!--Content: with lists and forms -->
    {% block content %}
        {{ include(
            'TixiHomeBundle:Default:splash.html.twig'
        ) }}
    {% endblock %}

    <!--Errormessage: rendered last, displayed as a pop-up -->
    {% block errormsg %}
        <div id="overlay">
            <div>
                <p>Bitte warten...</p>
                <img  src="{{ asset('images/pleasewait.gif') }}" alt="Bitte warten ..." />
            </div>
        </div>

        <div id="errbox">
            <div>
                <p>{{ app.session.get('errormsg') }}</p>
                <input id="fpm_acknowledge" type="button" value="Bestätigen" onclick="errbox();"/>
            </div>
        </div>

        {% if app.session.get('errormsg') != '' %}
            <script>
                /* old code: alert("{{ app.session.get('errormsg') }}") */
                elx = document.getElementById("errbox");
                elx.style.visibility = (elx.style.visibility == "visible") ? "hidden" : "visible";
            </script>
        {% endif %}
    {% endblock %}

{% endblock %}