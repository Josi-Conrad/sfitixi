{% extends '::base.html.twig' %}
{% set topNavigationActivePage = 'tixiapi_vehicles_get' %}
{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="col-md-6"><h2 class="text-muted">Fahrzeug <small>{{ vehicle.id }}</small></h2></div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <div class="row">
            <div class="col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading"><h3 class="panel-title">Fahrzeugdetails</h3></div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="button" class="btn btn-primary btn-sm" onclick="window.location='{{ path('tixiapi_vehicle_editbasic',{'vehicleId':vehicle.id}) }}'">
                                    Editieren
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                {#<div class="col-md-6">#}
                                <form class="form-horizontal detailViewForm">
                                    <div class="form-group">
                                        <label class="control-label col-md-6">Fahrzeugname</label>

                                        <div class="col-md-6">
                                            <p class="form-control-static">{{ vehicle.name }}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-6">Kennzeichen</label>

                                        <div class="col-md-6">
                                            <p class="form-control-static">{{ vehicle.licenceNumber }}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-6">Inverkehrssetzung</label>

                                        <div class="col-md-6">
                                            <p class="form-control-static">{{ vehicle.dateOfFirstRegistration }}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-6">Parkplatz- bezeichnung</label>

                                        <div class="col-md-6">
                                            <p class="form-control-static">{{ vehicle.parkingLotNumber }}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-6">Fahrzeugkategorie</label>

                                        <div class="col-md-6">
                                            <p class="form-control-static">{{ vehicle.category }}</p>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                {% set vehicleid = vehicle.id %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Zugeordnete Servicepläne</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            {{ render(controller('TixiApiBundle:ServicePlan:getServiceplans', { 'vehicleId':vehicleid, 'embedded':true })) }}
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
        <div class="panel-footer text-right">
                    <button type="button" class="btn btn-danger btn-sm" data-targetSrc="{{ path('tixiapi_vehicle_new') }}">
                        Fahrzeug Löschen
                    </button>
        </div>
    </div>
{% endblock %}