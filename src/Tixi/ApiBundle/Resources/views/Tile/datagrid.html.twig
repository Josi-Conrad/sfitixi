<div class="dataGrid" data-gridid="{{ gridState.getGridIdentifier() }}">
    <div class="row">
        <div class="topControlWrapper">
            <div class="row">
                <div class="col-md-4 filterControl">
                    <div class="input-group">
                        <input type="text" class="form-control gridFilterInput" />
                            <span class="input-group-btn">
                                <button class="btn btn-default gridFilterCommit" type="button">Suchen</button>
                            </span>
                    </div>
                </div>
                <div class="col-md-4 col-md-offset-4 text-right actionControl">
                    {% for resolvedElement in children %}
                        {% if 'datagridcustomcontrol' in resolvedElement.viewIndentifiers %}
                            {{ resolvedElement.rawData | raw }}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="tableWrapper" style="margin-top:12px;">
            <table data-srcUrl="{{ gridState.getDataSrcUrl()|default('') }}" class="table table-hover">
                <thead>
                <tr>
                    {% for header in gridState.getHeaders() %}
                        <th>
                            <div class="header"
                                 data-fieldId="{{ header.getFieldPropertyName() }}">{{ header.getHeaderName() }}</div>
                        </th>
                    {% endfor %}
                </tr>
                </thead>
                {% for resolvedElement in children %}
                    {% if 'datagridrowstable' in resolvedElement.viewIndentifiers %}
                        {{ resolvedElement.rawData | raw }}
                    {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 bottomControlWrapper">
            <div class="paginationControl">
                <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-default first"><<</button>
                    <button type="button" class="btn btn-default previous"><</button>
                    <button type="button" class="btn btn-default pageIndication"></button>
                    <button type="button" class="btn btn-default next">></button>
                    <button type="button" class="btn btn-default last">>></button>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    jQuery(function ($) {
        var dataGridManager = new DataGridManager();
        dataGridManager.initDataGrids({{ gridConfJS | raw }});
    });
</script>
