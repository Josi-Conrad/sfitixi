{% extends 'TixiApiBundle:Form:fieldsBootstrap.html.twig' %}

{% block form_row %}
    {% spaceless %}
        <div class="row">
            {{ form_label(form, null, {'label_attr': {'class':'col-md-2 control-label'}}) }}
            <div class="col-md-10">
                {{ form_widget(form) }}
                <div class="error_message">{{ form_errors(form) }}</div>
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}
