{% set embedded = embedded|default(false) %}

    <div class="row">
            <div class="topControlWrapper">
                <div class="row">
                <div class="{% if embedded %}col-md-5{% else %}col-md-4{% endif %} filterControl">
                    <div class="input-group">
                        <input type="text" class="form-control gridFilterInput {% if embedded %}input-sm{% endif %}" />
                        <span class="input-group-btn {% if embedded %}btn-group-sm{% endif %}">
                            <button class="btn btn-default gridFilterCommit" type="button">Suchen</button>
                        </span>
                    </div>
                    <!-- /input-group -->

                    {#<input type="search" class="gridFilterInput">#}
                    {#<input type="button" class="gridFilterCommit" value="Suchen">#}
                </div>
                <div class="{% if embedded %}col-md-7{% else %}col-md-4 col-md-offset-4{% endif %} text-right actionControl">{% block customListActionControl %}{% endblock %}</div>
                </div>
            </div>

    </div>
    <div class="row">
        {#<div class="col-md-12">#}
            <div class="tableWrapper" style="margin-top:12px;">
                <table data-srcUrl="{{ dataSrcUrl|default('') }}" class="table table-hover">
                    <thead>
                    <tr>
                        {% for header in tableHeaders %}
                            <th>
                                <div class="header"
                                     data-fieldId="{{ header.getFieldPropertyName() }}">{{ header.getHeaderName() }}</div>
                            </th>
                        {% endfor %}
                    </tr>
                    </thead>
                    {% include 'TixiApiBundle:Shared:datagrid.tablebody.html.twig' %}
                </table>
            </div>
        {#</div>#}
    </div>
    <div class="row">
        <div class="col-lg-12 bottomControlWrapper">
            <div class="paginationControl">
                <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-default first"><<</button>
                    <button type="button" class="btn btn-default previous"><</button>
                    <button type="button" class="btn btn-default pageIndication"></button>
                    <button type="button" class="btn btn-default next">></button>
                    <button type="button" class="btn btn-default last">>></button>
                </div>
            </div>
        </div>
    </div>
